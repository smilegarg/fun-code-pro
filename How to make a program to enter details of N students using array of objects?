//Write a program to enter roll no. and marks of students and find total percentage and also find maximum total and minimum percentageâ€¦.

#include<iostream>
using namespace std;
class stud
{
    int roll;
    float p,c,m,tot,per;
    public:
    void setValue()
    {
        cout<<"\n enter roll no.\n";
        cin>>roll;
        cout<<"\n enter marks of physics,chemistry and maths(out of 100 each):\n";
        cin>>p>>c>>m;
    }
    float pro()
    {
        tot=p+c+m;
        per=tot*100/300;
    }
    float getPer()
    {
        return per;
    }
    float getTot()
    {
        return tot;
    }
};
int main()
{
    int n,i;
    float max,min;
    cout<<"\n enter number of students:";
    cin>>n;
    stud s[n];
    for(i=0;i<n;i++)
    {
        s[i].setValue();
        s[i].pro();
    }
    for(i=0;i<n;i++)
    {
        float tot=s[i].getTot();
        float per=s[i].getPer();
        cout<<"\n"<<i+1<<". total="<<tot<<" ,Percentage="<<per;
    }
    max=s[0].getTot();
    min=s[0].getPer();
    for(i=0;i<n;i++)
    {
        if(max<s[i].getTot())
            max=s[i].getTot();
        if(min>s[i].getPer())
            min=s[i].getPer();
    }
    cout<<"\n maximum total="<<max;
    cout<<"\n minimum percentage="<<min;
}


Output:
